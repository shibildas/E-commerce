<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                            src="/productimages/<%= product.image[0] %>" alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <% product.image.forEach((val,i)=>{ %> 
                        <img data-imgbigurl="/productimages/<%= val %>"
                            src="/productimages/<%= val %>" alt="">
                            <% }) %> 
                       
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3><%= product.brand.brand%></h3>
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div>
                    <div class="product__details__price text-success">&#8377; <%= product.price %></div>
                    <% let discr = product.description.replace(/-br/g,'<br>') %> 
                    <p><%- discr %> </p>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1" max="<%= product.stock %>" name="product-quanity" id="product-quanity">
                            </div>
                        </div>
                    </div>
                    <a type="button" class="primary-btn text-white" name="submit" value="addtocard" onclick="addToCartLoc('<%= product._id %>','product-quanity')">ADD TO CARD</a>
                    <a type="submit" class="heart-icon" value="buy" onclick="addToWishList('<%=product._id%>'); return false" id="<%=product._id%>WishBtn"><span class="icon_heart_alt"></span></a>
                    <ul>
                        <li><b>Availability</b> <span>Only <%= product.stock %> items remaining</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Delivery in 3 Days</samp></span></li>
                        <li><b>Size</b> <span><b><%= product.size %></b></span></li>
                        <li><b>Share on</b>
                            <div class="share">
                                <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.drtyre.co/productDetail/'<%= product._id %>'" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                                <a href="https://twitter.com/share?url=https://www.drtyre.co/productDetail/'<%= product._id %>'" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                                <a href="https://www.instagram.com/sharer.php?u=https://www.drtyre.co/productDetail/'<%= product._id %>'"target="_blank"><i class="fa-brands fa-instagram"></i></a>
                                <a href="https://pinterest.com/pin/create/button/?url=https://www.drtyre.co/productDetail/'<%= product._id %>'"target="_blank"><i class="fa-brands fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                aria-selected="true">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                                aria-selected="false">Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                                aria-selected="false">Reviews <span>(1)</span></a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Products Infomation</h6>
                                <%- discr %>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Products Infomation</h6>
                                <%- discr %>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Products Infomation</h6>
                                <%- discr %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->