<section class="vh-100">
  <div class="container-fluid">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
          <% if (message.type) { %>
          
            <div
              class="alert alert-<%= message.type === 'success' ?'success' : 'danger' %>"
              role="alert"
            >
              <%= message.body %>
            </div>
            <% } %>
          <img src="/images/signup.png"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <form method="post" action="/register">
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
              <h1 class=" mb-0 me-3">Sign Up</h1>
            </div>
  
            <div class="divider d-flex align-items-center my-4">
              <p class="text-center fw-bold mx-3 mb-0">| ^ |</p>
            </div>
  
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3" >Name</label>
              <input name="name"  type="text" required id="form3Example1" class="form-control form-control-lg"
                placeholder="Your Name"  />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3">Email address</label>
              <input name="email"  type="email" required  id="form3Example2" class="form-control form-control-lg"
                placeholder="Enter a valid email address" />
            </div>
             <!-- Password input -->
             <div class="form-outline mb-3">
               <label class="form-label" for="form3Example4">Password</label>
              <input name="password" type="password" required  id="form3Example4" class="form-control form-control-lg"
                placeholder="Enter password" />
            </div>
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example4">Confirm Password</label>
              <input name="cPassword" type="password" required  id="form3Example5" class="form-control form-control-lg"
              placeholder="Re-Enter password" />
            </div>
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="exampleCheck1" />
              <label class="form-check-label" for="form2Example3">
                Show Password
              </label>
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3">Mobile</label>
              <input name="mobile"  type="number" id="form3Example6" inputmode="numeric" class="form-control form-control-lg"
                placeholder="Enter Your Mobile Number" required  maxlength="10" autocomplete="mobile" pattern="\d{10}"/>
            </div>

            <div class="d-flex justify-content-between align-items-center">
              
            </div>
  
            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" class="btn btn-primary btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
              <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account? <a href="/login"
                  class="link-danger">Log In</a></p>
            </div>
  
          </form>
        </div>
      </div>
    </div>
  </div>
  </section>
<script>
  document.getElementById('exampleCheck1').addEventListener('change', () => {
      let form3Example4 = document.getElementById('form3Example4');
      let form3Example5 = document.getElementById('form3Example5');
      if (form3Example4.getAttribute('type') == 'password' || form3Example5.getAttribute('type') == 'password') {
        form3Example4.setAttribute('type', 'text');
        form3Example5.setAttribute('type', 'text');
      } else {
        form3Example4.setAttribute('type', 'password');
        form3Example5.setAttribute('type', 'password');
      }


      
  })
</script>
