            },
            dataType: "json",
            encode: true,
            }).done(function (data) {
                if(data.success==true){
                    $('#addresslist').html('')
                    data.data.addressList.forEach((val,i)=>{
                        $('#addresslist').append(`<div class="card p-3 bg-light my-2" id="addrs${val._id}" role="button" onclick="selectAddress('addrs${val._id}')">
                            <div class="col-md-6">
