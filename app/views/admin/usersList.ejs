<div class="container content-wrapper bg-secondary my-auto mx-auto">
  <div class="d-flex justify-content-between border-bottom py-3 mb-2">
    <h2 class="text-white p-0">Users</h2>
  </div>
  <% if (message.type) { %>

  <div
    class="alert alert-<%= message.type === 'success' ?'success' : 'danger' %>"
    role="alert"
  >
    <%= message.body %>
  </div>
  <% } %>
  <table class="table table-striped table-dark table-hover" id="dtBasicExample">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Admin/Customer</th>
        <th scope="col">Actions</th>
        <th scope="col">Block / Unblock</th>
      </tr>
    </thead>
    <tbody>
      <% currUsers.forEach((user,i)=>{ %>
      <tr>
        <td><%= i+1 %></td>
        <td>
          <span class="text-warning"><i class="fa fa-user"></i></span> <%=
          user.name %>
        </td>
        <td>
          <span class="text-info"><i class="fa fa-envelope"> </i></span> : <%=
          user.email %>
        </td>
        <td><%= user.role %></td>
        <td>
          <button
            type="button"
            class="btn btn-labeled btn-success"
            data-bs-toggle="modal"
            data-bs-target="#staticBackdrop-<%= i %>"
          >
            <span class="btn-label"><i class="fa fa-pen"></i></span> Edit
          </button>

          <!-- Button trigger modal -->

          <!-- Modal -->
          <div
            class="modal fade"
            id="staticBackdrop-<%= i %>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Edit <%= user.name %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close btn-close-white"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form action="/admin/editUser/<%= user._id %>" method="post">
                    <div class="mb-3 form-group">
                      <label for="exampleInputname" class="form-label"
                        >Username</label
                      >
                      <input
                        name="name"
                        type="text"
                        class="form-control"
                        id="exampleInputEmail1"
                        aria-describedby="emailHelp"
                        value="<%= user.name %>"
                      />
                    </div>
                    <div class="mb-3 form-group">
                      <label for="exampleInputEmail1" class="form-label"
                        >Email address</label
                      >
                      <input
                        name="email"
                        type="email"
                        class="form-control"
                        id="exampleInputEmail1"
                        aria-describedby="emailHelp"
                        value="<%= user.email %>"
                      />
                    </div>
                    <div class="mb-3 form-group">
                      <label for="exampleInputPassword1" class="form-label"
                        >Password</label
                      >
                      <input
                        name="password"
                        type="password"
                        class="form-control"
                        id="exampleInputPassword1"
                        required
                      />
                    </div>
                    <div class="mb-3 form-group">
                      <label for="exampleInputNumber" class="form-label"
                        >Mobile</label
                      >
                      <input
                        name="mobile"
                        type="number"
                        class="form-control"
                        id="exampleInputNumber"
                        value="<%= user.mobile %>"
                      />
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-outline-warning"
                        data-bs-dismiss="modal"
                      >
                        Cancel
                      </button>
                      <button type="submit" class="btn btn-primary">
                        Submit
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </td>
        <td>
          <% if(user.isVerified){ %>

          <button
            type="button"
            class="btn btn-outline-danger mr-3"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal2-<%= i %>"
          >
            <span class="btn-label"><i class="fa fa-lock"></i></span> | Block
          </button>

          <% }else{ %>

          <button
            type="button"
            class="btn btn-outline-secondary mr-3"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal2-<%= i %>"
          >
            <span class="btn-label"><i class="fa fa-unlock"></i></span> |
            Unblock
          </button>

          <% } %>
          <div
            class="modal fade"
            id="exampleModal2-<%= i %>"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">
                    <% if(user.isVerified){ %>Block <% }else{ %> Unblock <% } %>
                    <%= user.name %>
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  Are you sure you want to <% if(user.isVerified){ %> Block <%
                  }else{ %> Unblock <% } %> <%= user.name %> ?
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    No
                  </button>
                  <form
                    action="/admin/UnBlockUser/<%= user._id %>"
                    method="post"
                  >
                    <button type="submit" class="btn btn-danger">Yes</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<script>
  $(document).ready(function () {
    $("#dtBasicExample").DataTable();
    $(".dataTables_length").addClass("bs-select");
  });
</script>
